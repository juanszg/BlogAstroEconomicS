        .navbar {
            position: absolute;
            top: 100px;
            left: 87%;
            /*background: red;*/
            line-height: 0px;
            background: none;
        }
        .navbar .toggle-btn {
            /*color: rgb(135, 3, 3); /* color barra colores*/
