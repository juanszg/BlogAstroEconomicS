            font-size: 1.7em;
            padding: 0em;
            display: visible;
        }
        .dropdown-menu {
            display: none !important;
            /*background: rgba(74, 188, 190, 0.1);*/
            background-color: rgb(249, 249, 249);
            position: absolute;
            right: 4rem;
            top: 170px;
            height: 0px;
            width: 300px;
            line-height: 2em;
            border-radius: 10px;

            z-index: 999;
            /*padding: 3.5em;*/

            overflow: hidden;
            transition: height 0.2s cubic-bezier(0.175, 0.882, 0.32, 1.275);
        }

        .dropdown-menu li {
            padding: 0.5em;
            text-align: center;
            font-family: montserrat;
            font-weight: 800;
        }
        .dropdown-menu a {
            color: darkblue;
        }
        .dropdown-menu a:hover {
            color: rgb(127, 223, 255);
        }

        .dropdown-menu.open {
            display: block !important;
            height: 420px;
            z-index: 999;
        }
        .navbar .enlaces {
            display: none; /* Si quiero el texto de navegacion horizontal en la navbar */
        }
        .navbar .toggle-btn {
            display: block;
            cursor: pointer;
        }
        @media (max-width: 730px) {
            .logo-2 img {
                width: 410px;
                height: 205px;
                transform: scale(1.3);
            }
        }
        @media (max-width: 860px) {
            li {
                list-style: none;
