                height: 205px;
                transform: scale(1);
            }
        }
        @media (max-width: 645px) {
            .logo-2 img {
                position: relative;
                left: -5%;
            }
            .dropdown-menu {
                top: 150px;
            }
        }
        @media (max-width: 475px) {
            .logo-2 {
                text-align: center;
            }
            .logo-2 img {
                position: relative;
                /*left: -15%;*/
                width: 410px;
                height: 205px;
                transform: scale(0.6);
            }
            li {
                list-style: none;
                font-weight: 600;
                font-size: 1.5em;
            }
            .dropdown-menu {
                position: absolute;
                right: 1.5rem;
                top: 150px;
            }
        }
        @media (max-width: 360px) {
            .logo-2 img {
                position: relative;
                left: -15%;
            }
        }
    </style>
<script>
    const toggleBtn = document.querySelector(".toggle-btn") as HTMLElement | null;
    const toggleBtnIcon = document.querySelector(".toggle-btn i") as HTMLElement | null;
    const dropDown = document.querySelector(".dropdown-menu") as HTMLElement | null;

    if (toggleBtn && dropDown && toggleBtnIcon) {
        toggleBtn.onclick = function () {
            dropDown.classList.toggle("open");
            const isOpen = dropDown.classList.contains("open");

            if (isOpen) {
                toggleBtnIcon.classList.remove("fa-bars");
                toggleBtnIcon.classList.add("fa-xmark");
            } else {
                toggleBtnIcon.classList.remove("fa-xmark");
                toggleBtnIcon.classList.add("fa-bars");
            }
        };
    } else {
        console.error("Uno o más elementos no se encontraron en el DOM.");
    }
</script>

