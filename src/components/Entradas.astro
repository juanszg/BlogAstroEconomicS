---
interface Props {
    titulo: string;
    fecha: string;
    autor: string;
    descripcion: string;
    href: string;
}

const { titulo, fecha, autor, descripcion, href } = Astro.props;
---


    <a href={href}>
        <!-- <div class="grid-1">-->
        <div class="entrada">
            <h2 class="titulo">
                {titulo}
            </h2>
            <p class="fecha">
                {fecha}
            </p>
            <p class="autor">
                {autor}
            </p>
            <p class="desc">
                {descripcion}
            </p>
        </div>
    </a>

<style>
    body {
        font-family: montserrat;
    }
  

    a {
        text-decoration: none;
    }
    h2 {
        color: rgb(0, 35, 90);
        font-weight: 800;
    }
    body.dark h2 {
        color: rgb(53, 134, 255);
    }
    body.dark p {
        color: rgb(214, 214, 214);
    }
    p {
        color: rgb(0, 6, 85);
        font-weight: 500;
    }

    .fecha {
        font-size: 1rem;
        color: rgb(0, 7, 104);
    }
    body.dark .fecha {
        color: rgb(180, 180, 180);
    }
    .autor {
        position: relative;
        top: -15px;
        font-size: 0.8rem;
        color: rgb(0, 7, 104);
    }
    body.dark .autor {
        color: rgb(180, 180, 180);
    }
    .desc {
        font-size: 1rem;
    }
